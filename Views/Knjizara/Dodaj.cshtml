
@model Knjizara.ViewModels.KnjigaZanrViewModel
@{
    Layout = "_Layout";
}
@Html.ValidationSummary()
<div>
    <h1>Knjizara - Naslovna strana</h1>
    <hr>
    <form action='/Knjizara/Dodaj' method='post'>
        <table class="table">
            <tr>
                <th colspan='3'>Dodaj novu knjigu</th>
            </tr>
            <tr>
                <td>Naziv:</td>
                <td>
                    <input id="naziv" class="form-control" type='text' name='naziv' value="@Model.Knjiga.Naziv" required>
                    @if (TempData["Poruka"] != null)
                    {
                        <p class="poruka">@TempData["Poruka"]</p>
                    }
                </td>
                <td>@Html.ValidationMessageFor(m => m.Knjiga.Naziv)</td>
            </tr>
            <tr>
                <td>Cena:</td>
                <td><input class="form-control" type='number' name='cena' min='0' step='0.01' pattern='^\d+(?:\.\d{1,2})?$'></td>
                <td>@Html.ValidationMessageFor(m => m.Knjiga.Cena)</td>
            </tr>
            <tr>
                <td>Zanr:</td>
                <td>
                    <select class="form-select" name='idZanra'>
                        @foreach (ZanrModel z in Model.Zanrovi)
                        {
                            <option value="@z.Id">@z.NazivZanra</option>
                        }
                    </select>
                </td>
            </tr>
            <tr style='text-align: center;'>
                <td colspan='2'><input type='submit' name='Dodaj' value='Dodaj' class="btn btn-success"></td>
            </tr>
        </table>
    </form>
</div>
