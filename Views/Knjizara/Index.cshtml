@model List<KnjigaModel>
@{
    Layout = "_Layout"; 
}
<div>
    <h1>Prikaz svih knjiga</h1>
    <hr>
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Naziv</th>
            <th>Cena</th>
            <th>Zanr</th>
            <th></th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td>@k.Naziv</td>
                <td>@k.Cena</td>
                <td>@k.Zanr.NazivZanra</td>
                <td><a href="/Knjizara/Ukloni?id=@k.Id">Ukloni</a></td>
                <td><a href="/Knjizara/Izmeni?id=@k.Id">Izmeni</a></td>
            </tr>
        }
    </table>
    <div class="sortiranje">
        <form action="/Knjizara/Sortiraj" method="post">
            <input type="hidden" name="tipListe" value="sve" />
            <select class="form-select" name="nacin">
                <option value="1">Po naslovu - rastuce</option>
                <option value="2">Po naslovu - opadajuce</option>
                <option value="3">Po ceni - rastuce</option>
                <option value="4">Po ceni - opadajuce</option>
            </select><br />
            <div class="text-center">
                <input type="submit" value="Sortiraj" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
    <div class='mt-4 linkovi'>
        <div class="btn-group-vertical">
            <div class="btn btn-primary"><a class="nedekorisan" href="/Knjizara/Dodaj">Dodaj Novu Knjigu</a></div>
            <div class="btn btn-primary"><a class="nedekorisan" href='/Knjizara/IzlistajObrisane'>Prikaz obrisanih knjiga</a></div>
        </div>
        <div class="btn-group-vertical">
            <div class="btn btn-secondary"><a class="nedekorisan" href='/Zanr/Index'>Dodaj novi zanr</a></div>
            <div class="btn btn-secondary"><a class="nedekorisan" href='/Zanr/IzlistajSve'>Prikaz zanrova</a></div>
        </div>
    </div>
</div>
