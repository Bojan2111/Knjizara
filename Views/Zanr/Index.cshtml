@{
    Layout = "_Layout";
}
<div>
    <h1>Zanrovi - Naslovna strana</h1>
    <hr>
    <form action='/Zanr/Dodaj' method='post'>
        <table class="table">
            <tr>
                <th colspan='2'>Dodaj novi zanr</th>
            </tr>
            <tr>
                <td>Naziv zanra:</td>
                <td>
                    <input id="nazivZanra" class="form-control" type='text' name='nazivZanra' required>
                    @if (TempData["PorukaZanr"] != null)
                    {
                        <p class="alert-danger">@TempData["PorukaZanr"]</p>
                    }
                </td>
            </tr>
            <tr style='text-align: center;'>
                <td colspan='2'><input type='submit' name='Dodaj' value='Dodaj' class="btn btn-success"></td>
            </tr>
        </table>
    </form>
    <div class='linkovi'>
        <div class="btn btn-info"><a class="nedekorisan" href='/Zanr/IzlistajSve'>Prikaz svih zanrova</a></div>
        <div class="btn btn-info"><a class="nedekorisan" href='/Knjizara/Index'>Povratak na pocetnu stranicu</a></div>
    </div>
</div>