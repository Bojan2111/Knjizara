@model ZanrModel
@{
    Layout = "_Layout";
}
<div>
    <h1>Zanrovi - Naslovna strana</h1>
    <hr>
    <form action='/Zanr/Izmeni' method='post' onsubmit="return zanrValidacija()">
        @Html.TextBoxFor(m => m.Id, new { @type = "hidden" })
        <table class="table">
            <tr>
                <th colspan='2'>Izmeni zanr</th>
            </tr>
            <tr>
                <td>Naziv zanra:</td>
                <td>
                    <input id="nazivZanra" class="form-control" type='text' name='NazivZanra' value="@Model.NazivZanra">
                    <p class="poruka"><span id="ZanrGreska"></span>@Html.ValidationMessageFor(m => m.NazivZanra)</p>
                </td>
            </tr>
            <tr style='text-align: center;'>
                <td colspan='2'><input type='submit' name='Izmeni' value='Izmeni' class="btn btn-success"></td>
            </tr>
        </table>
    </form>
    <div class='linkovi'>
        <div class="btn btn-info"><a class="nedekorisan" href='/Zanr/IzlistajSve'>Prikaz svih zanrova</a></div>
        <div class="btn btn-info"><a class="nedekorisan" href='/Knjizara/Index'>Povratak na pocetnu stranicu</a></div>
    </div>
</div>
<script src="~/js/clientvalidation.js"></script>